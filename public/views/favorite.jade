include lib/common
+page('Broker AI')
  div(ng-controller='ShowStocksController')
    section
      .container.main-content-wrapper
        .row.col-md-12.col-lg-12.col-sm-12
          .row.col-md-8.col-lg-8.col-sm-12
            h1 
              li.fa.fa-heart.down
              |   FAVORITES
          .row.col-md-4.col-lg-4.col-sm-12
            .btn-group.btn-group-options(data-toggle='buttons')
              label.btn.btn-darkgrey.active
                input#daily(type='radio', name='predict', autocomplete='off', checked)
                |  Daily
              label.btn.btn-darkgrey
                input#weekly(type='radio', name='predict', autocomplete='off')
                |  Weekly
              label.btn.btn-darkgrey
                input#monthly(type='radio', name='predict', autocomplete='off')
                |  Monthly
        
        .row
          hr
        .content
          table.table-bordered
            thead
              tr
                th(id ='noBorder')
                th SYMBOL
                th COMPANY
                th LAST SALE
                th CHANGE NET / %
            tbody
              tr(ng-repeat="fav in favorite_stocks")
                th(id = 'noborder')
                  button.unfavButton.noBgButton.fa.fa-heart.down
                th.col-md-2.col-lg-2-col-sm-2(scope="row") {{fav.stock_name}}
                td.col-md-5.col-lg-5-col-sm-5(style="position:relative;")
                  a(href='/info')
                    | {{fav.stock_fullname}}
                    i.fa.fa-info-circle.moreinfo 
                td.col-md-2.col-lg-2-col-sm-2 last sale
                td.col-md-3.col-lg-3-col-sm-3.down(ng-if='fav.daily_predict===\'down\'') {{fav.daily_predict_price}}  
                  li.fa.fa-caret-down
                    |   {{fav.daily_predict_percent}}
                td.col-md-3.col-lg-3-col-sm-3.up(ng-if='fav.daily_predict===\'up\'') {{fav.daily_predict_price}}  
                  li.fa.fa-caret-up
                    |   {{fav.daily_predict_percent}}
